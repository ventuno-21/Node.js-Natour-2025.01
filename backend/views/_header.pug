header.header
    nav.nav.nab--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Logout
            a.nav__el(href='/me')
                //- img.nav__user-img(src=/img/users/`${user.photo=true ? user.photo :'default.jpg'}`,alt='User photo')
                if (user.photo==false)
                    img.nav__user-img(src=`/img/users/default.jpg`,alt='User photo')
                else
                    img.nav__user-img(src=`/img/users/${user.photo}`,alt='User photo')

                span=user.name.split(' ')[0]
        else
            a.nav__el.nav(href='/login') log in
            a.nav__el.nav__el--cta(href='/signup') Sign up